---
import "../styles/global.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/arrow.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    
    <!-- Script para manejar el cambio de tema -->
    <script type="module" src="/theme-toggle.js"></script>
  </body>
</html>

<style is:global>
html {
  font-family: Menlo, Monaco, Lucida Console, 'Courier New', Courier, monospace;
  background: var(--bg-color);
  color: var(--text-color);
  letter-spacing: -0.025rem;
}

body, figure {
  margin: 0;
  padding: 0;
}

a {
  text-decoration: none;
}

ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

*, *::before, *::after {
  box-sizing: border-box;
}

h1, h2, h3, h4 {
  margin: 0;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

p {
  color: #888;
  font-size: .8rem;
  line-height: 1.5;
  margin: 0;
  text-wrap: pretty;
  font-family: Menlo, Monaco, Lucida Console, 'Courier New', Courier, monospace;
}

/* Estilos para el tema claro */
[data-theme='light'] {
  --bg-color: #fdfdfd;
  --text-color: #1a1a1a;
  --accent-color: #0066cc;
  --link-hover: #004999;
  --border-color: #e0e0e0;
  --card-bg: #ffffff;
  --code-bg: #f5f5f5;
}

/* Estilos para el tema oscuro */
[data-theme='dark'] {
  --bg-color: #121212;
  --text-color: #e0e0e0;
  --accent-color: #4dabf7;
  --link-hover: #82cfff;
  --border-color: #2a2a2a;
  --card-bg: #1e1e1e;
  --code-bg: #272727;
}
</style>