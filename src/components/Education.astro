---
import Section from "./section.astro";
import { education } from '../cv.json'

---

<Section title="Education">
    <ul>
        {
            education.map(({institution, startDate, endDate, studyType, area, isActive}) => {
                const startYear = new Date(startDate).getFullYear()
                const endYear = endDate != null ? new Date(endDate).getFullYear() : "present"
                const years = `${startYear} - ${endYear}`
                return (
                <li>
                    <article>
                        <header>
                            <div>
                            <h3>{institution}
                                <a>{isActive && <span>&bull;</span>}</a>
                            </h3>
                            <h4>{studyType}</h4>
                            </div>
                            <time>{years}</time>
                        </header>
                        <footer>
                            <p>{area}</p>
                        </footer>
                    </article>
                </li>
                )
            })
        }
    </ul>
</Section>


<style>
    ul{
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3{
        font-weight: 500;
        color: #111;
    }

    article h4{
        font-family:monospace;
        font-size: 0.9rem;
        font-weight: 400;
        color: #222;
        margin-top: 4px;
    }

    header{
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 4px;
    }

#unique-paragraph{
    font-size: 0.9rem
}

    time{
        color: #555;
        font-size: .85rem;
    }

    h3 a{
        color: rgb(0, 255, 64);
    }

</style>
