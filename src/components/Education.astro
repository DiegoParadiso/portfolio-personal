---
import Section from "./section.astro";
import { education } from '../cv.json'
import AnimatedText from "./AnimatedText.astro"

---
<Section title="Education">
    <ul>
        {
            education.map(({institution, startDate, endDate, studyType, area, isActive}) => {
                const startYear = new Date(startDate).getFullYear()
                const endYear = endDate != null ? new Date(endDate).getFullYear() : "present"
                const years = `${startYear} - ${endYear}`
                return (
                <li>
                    <article>
                        <header>
                            <div>
                            <h3>{institution}
                                <a>{isActive && <span>&bull;</span>}</a>
                            </h3>
                            <h4>{studyType}</h4>
                            </div>
                            <time>{years}</time>
                        </header>
                        <footer>
                            <div id="unique-paragraph" class="paragraph-style">
                                <AnimatedText text={area} />
                            </div>                        
                        </footer>
                    </article>
                </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
        margin: 0;
        padding: 0;
    }

    article h3 {
        font-weight: 500;
        color: var(--text-color);
        font-size: 1.1rem;
    }

    article h4 {
        font-family: monospace;
        font-size: 0.9rem;
        font-weight: 400;
        color: var(--text-color);
        margin-top: 4px;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 4px;
        flex-wrap: wrap;
    }

    time {
        color: var(--text-color);
        font-size: 0.85rem;
        opacity: 0.7;
    }

    h3 a {
        color: rgb(0, 255, 64);
        margin-left: 0.5rem;
        font-size: 1rem;
    }

    footer p {
        font-size: 0.9rem;
    }
    
    .paragraph-style {
        color: var(--text-color);
		font-size: 0.9rem;
		line-height: 1.5;
		margin: 0;
		text-wrap: pretty;
        font-family: monospace;
  }
    /* Responsividad */
    @media (max-width: 768px) {
        ul {
            gap: 24px;
        }

        article h3 {
            font-size: 1.2rem;
        }

        article h4 {
            font-size: 0.85rem;
        }

        time {
            font-size: 0.8rem;
        }

        footer p {
            font-size: 0.8rem;
        }
    }

    @media (max-width: 480px) {
        ul {
            gap: 16px;
        }

        article h3 {
            font-size: 1rem;
        }

        article h4 {
            font-size: 0.8rem;
        }

        time {
            font-size: 0.75rem;
        }

        footer p {
            font-size: 0.75rem;
        }
    }
</style>
