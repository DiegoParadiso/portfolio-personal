---
// components/AnimatedText.astro
const { text = "" } = Astro.props;
const words = text.split(" ");
---

<span class="animated-text">
  {
    words.map((word, i) => (
      <span class="word" key={i}>
        {word.split("").map((letter, j) => (
          <span class="letter" key={j}>
            {letter}
          </span>
        ))}
      </span>
    ))
  }
</span>

<style is:global>
  .animated-text {
    display: inline;
  }
  
  .word {
    display: inline-block;
    margin-right: 0.35em;
    cursor: default;
    position: relative;
  }
  
  .letter {
    display: inline-block;
    color: #777;  /* Gris claro */
    opacity: 0.9;
    transition: opacity 0.25s ease;
    position: relative;
  }
  
  /* Hover: leve realce */
  .word:hover .letter {
    color: #555; /* Gris un poco más oscuro al hacer hover */
    opacity: 1;
  }
  
  /* Subrayado más sutil */
  .word:hover .letter::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0px;
    height: 0.5px;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }
  
  .word:hover .letter:hover::after {
    transform: scaleX(1);
  }
</style>

