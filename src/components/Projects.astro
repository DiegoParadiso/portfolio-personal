---
import Section from "./section.astro";
import AnimatedText from "./AnimatedText.astro"
import { projects } from "../cv.json"
---

<Section title="Projects">
    <ul>
        {
            projects.map (({ url, description, highlights, name, isActive }) => {
                return (
                <li>
                    <article>
                        <header>
                            <h3>
                            <a href={url} title={`Ver el proyecto ${name}`}>
                            {name}
                            </a>
                            {isActive && <span>&bull;</span>} 
                            </h3>
                            <div id="unique-paragraph" class="paragraph-style">
                                <AnimatedText text={description} />
                            </div>
                        </header>
                    </article>
                </li>
                )
            }
        )
        }
    </li>
</Section>

<style>

    ul{
        display:grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        padding: 0;
    }

    article {
        border-radius: 8px;
        border: 1px solid var(--border-color);
        background-color: var(--card-bg);
        display: flex;
        gap: 16px;
        flex-direction: column;
        padding: 16px;
        height: 100%;
        transition: background-color 0.3s, border-color 0.3s;
    }

    .paragraph-style {
        color: var(--text-color);		
        font-size: 0.86rem;
		line-height: 1.5;
		margin: 0;
		text-wrap: pretty;
        font-family: monospace;
  }

    article header{
        flex:1;
    }

    article h3{
        margin-bottom: 4px;
    }

    article a {
        color: var(--text-color);
        transition: color 0.2s;
    }

    article a:hover{
        text-decoration: underline;
    }

    article p{
        font-size: 0.75rem;
        line-height: 1.2rem;
        margin-bottom: 4px;
    }

    article h3 span{
        color: rgb(0, 255, 64)
    }

</style>
