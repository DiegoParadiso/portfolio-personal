--- 
import { basics } from '../cv.json';
import Section from "./section.astro";
import Mail from "../Icons/Mail.astro";
import Phone from "../Icons/Phone.astro";
import GitHub from "../Icons/GitHub.astro";
import Linkedin from "../Icons/Linkedin.astro";
import World from "../Icons/World.astro";
import Substrack from "../Icons/Substrack.astro";

const { name, label, image, location, profiles, phone, email } = basics;
const { region, countryCode } = location;

const SOCIAL_ICONS: Record<string, any> = {
  GitHub,
  Linkedin,
  Substrack,
};

const linkedInfo = profiles.find(({ network }) => network == "LinkedIn");
const linkedUrl = linkedInfo?.url;

const printInfo = [email, phone, linkedUrl].filter(Boolean).join(', ');
---

<Section>
  <div class="container">
    <figure class="image-container">
      <img src={image} alt={name} />
    </figure>
    <div class="info">
      <h1>{name}</h1>
      <p id="unique-paragraph">{label}</p>
      <span class="location">
        <World /> 
        <p>{region}, {countryCode}</p>
      </span>
      <footer class="print"> 
        {printInfo}
      </footer> 
      <footer class="no-print"> 
        {email && (
          <a 
            href={`mailto:${email}`}
            title={`Enviar un correo electrónico a ${name} al correo ${email}`}
            target="_blank"
            rel="noopener noreferrer"
          >
            <Mail />
          </a>
        )}
        {phone && (
          <a 
            href={`tel:${phone}`}
            title={`Llamar por teléfono a ${name} al número ${phone}`}
            target="_blank"
            rel="noopener noreferrer"
          >
            <Phone />
          </a>
        )}
        {profiles.map(({ network, url }) => {
          const Icon = SOCIAL_ICONS[network];
          return (
            <a
              href={url}
              title={`Visitar el perfil de ${name} en ${network}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Icon />
            </a>
          );
        })}
      </footer>
    </div>
  </div>    
</Section>

<style>
  .container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    gap: 16px; /* Espacio entre los elementos */
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex-grow: 1;
  }

  .location {
    color: #666;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }

  img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    max-width: 100%;
    width: 130px;
    flex-shrink: 0;
    border-radius: 16px;
    margin-right: 16px; /* Margen a la derecha para separarla de los íconos */
  }

  footer {
    color: #666;
    font-size: 0.85rem;
    display: flex;
    gap: 4px;
    margin-top: 4px;
    letter-spacing: -0.05rem;
    flex-wrap: wrap;
  }

  footer a {
    color: #777;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #eee;
    padding: 4px;
    height: 32px;
    width: 32px;
    border-radius: 6px;
    transition: all .3s ease;
  }

  footer a:hover {
    background-color: #eee;
    border: 1px solid #ddd;
    color: #333;
  }

  .print {
    display: none !important;
  }

  @media print {
    .no-print {
      display: none !important;
    }
  }

  @media print {
    .print {
      display: block !important;
    }
  }

  /* Media queries para pantallas pequeñas y medianas */
  @media (max-width: 768px) {
    .container {
      flex-direction: column;
      align-items: flex-start; /* Cambié de center a flex-start */
      gap: 16px;
    }

    img {
        width: 150px; 
      margin-right: 0;
    }

    footer {
      gap: 8px;
      flex-direction: row; /* Los íconos siempre alineados horizontalmente */
    }

    footer a {
      height: 28px;
      width: 28px;
      padding: 3px;
    }

    .image-container {
      margin-top: 16px;
    }
  }

  @media (max-width: 480px) {
    .container {
      flex-direction: column;
      align-items: flex-start; /* Cambié de center a flex-start */
      gap: 8px;
    }

    img {
        width: 150px; 
    }

    footer a {
      height: 24px;
      width: 24px;
      padding: 2px;
    }

    footer {
      flex-direction: row; /* Los íconos siempre alineados horizontalmente */
      gap: 4px;
    }

    #unique-paragraph {
      font-size: 0.8rem;
    }

    .image-container {
      margin-top: 16px;
    }
  }
</style>