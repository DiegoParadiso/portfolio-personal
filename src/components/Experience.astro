---

import Section from "./section.astro"
import { work } from '../cv.json'
---

<Section title="Experience">
    <ul>
        {
            work.map(({name, startDate, endDate, position, summary, highlights}) => {
                const startYear = new Date(startDate).getFullYear()
                const endYear = endDate != null ? new Date(endDate).getFullYear() : "present"
                const years = `${startYear} - ${endYear}`
                return (
                <li>
                    <article>
                        <header>
                            <div>
                            <h3>{name}</h3>
                            <h4>{position}</h4>
                            </div>
                            <time>{years}</time>
                        </header>
                        <footer>
                            <p>{summary}</p>
                        </footer>
                    </article>
                </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul{
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3{
        font-weight: 500;
        color: #111;
    }

    article h4{
        font-family:monospace;
        font-size: 0.9rem;
        font-weight: 400;
        color: #222;
        margin-top: 4px;
    }

    header{
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 4px;
    }

#unique-paragraph{
    font-size: 0.9rem
}

    time{
        color: #555;
        font-size: .85rem;
    }
</style>
