---
import AnimatedText from './AnimatedText.astro';

const { title } = Astro.props;
---

<section>
    {title && <h1>{title}</h1>}
    <slot />
</section>

<style>
    section {    
        max-width: 700px;
        margin: 0 auto 72px;
    }

    h1 {
        margin-bottom: 8px;
        line-height: 1.5;
        font-size: 1.2rem;
        font-weight: 500;
    }
</style>